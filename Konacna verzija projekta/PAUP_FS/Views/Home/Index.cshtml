@model IEnumerable<PAUP_FS.Models.Rad>

@{
    ViewBag.Title = "Index";
}

<h2>Moji radovi</h2>

@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    @Html.AntiForgeryToken()

    @Html.DropDownList("IdSearch", (SelectList)ViewBag.IdSearch, "Svi radovi", new { @class = "form-control" })
    <input type="submit" value="Search" class="btn btn-primary" />
}

<p>
    @Html.ActionLink("Dodaj novi", "Dodaj")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategorijaIme.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StrukaIme.ImeStruke)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Path)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Korisnik)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.KategorijaIme.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrukaIme.ImeStruke)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Korisnik)
            </td>
            <td>
                @Html.ActionLink("Izbrisi", "Delete", new { id = item.ID })
                @Html.ActionLink("Predaj Zahtjev", "Zahtjev", new { id = item.ID })
                @Html.ActionLink("Preuzmi Rad", "DownloadFile", new { id = item.ID })
                @if (item.Zahtjev == true)
                {
                    <p>zahtjev predan</p>
                }
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Ispisi pdf", "PDF", "Home")

